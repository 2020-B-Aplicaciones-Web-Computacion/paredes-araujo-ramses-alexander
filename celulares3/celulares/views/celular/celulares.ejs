
<h1> LISTA DE CELULARES</h1>


<style>
    .mensaje{
        border: solid 1px #c3a062;
        width: 100%;
        margin: 10px;
    }
</style>

<% if(parametrosConsulta.mensaje){ %>
    <div class="mensaje">
        <%= parametrosConsulta.mensaje %>
    </div>
<% }%>



<form action="/celular/celulares" method="get">
    <label for="busqueda">BÃºsqueda</label>
    <input id="busqueda" type="text" name="busqueda">

    <button type="submit">
        Buscar
    </button>
</form>




<br>
<table border="1">
    <tr>
        <th style="display: none" >ID</th>
        <th>Nombre</th>
        <th>Modelo</th>
        <th>Procesador</th>
        <th>Memoria</th>
        <th colspan="2">Opciones</th>
    </tr>
    <% for (let celular of datosCelulares[0]){ %>
        <tr>
            <td style="display: none" ><%= celular.id %></td>
            <td><%= celular.nombre %></td>
            <td><%= celular.modelo %></td>
            <td><%= celular.procesador %></td>
            <td><%= celular.memoria %></td>
            <td>
                <a href="/celular/editar-celular?id=<%=celular.id%>">
                    <button>Editar</button>
                </a>
            </td>
            <td>
                <a href="/celular/eliminar-celular?id=<%=celular.id%>">
                    <button>Eliminar</button>
                </a>
            </td>
        </tr>
    <% } %>
</table>

